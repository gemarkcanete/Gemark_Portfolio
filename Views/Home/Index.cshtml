<script>
document.addEventListener("DOMContentLoaded", function () {
    // Fade-in on scroll
    const faders = document.querySelectorAll('.fade-in, .fade-in-section');

    const appearOptions = {
        threshold: 0.2,
        rootMargin: "0px 0px -50px 0px"
    };

    const appearOnScroll = new IntersectionObserver(function (entries, observer) {
        entries.forEach(entry => {
            if (!entry.isIntersecting) return;
            entry.target.classList.add('show');
            observer.unobserve(entry.target);
        });
    }, appearOptions);

    faders.forEach(fader => {
        appearOnScroll.observe(fader);
    });

    // Typing effect
    const text = "ASP.NET MVC / Azure Engineer";
    const typingEl = document.querySelector(".typing-text");
    let index = 0;
    let forward = true; // Typing forward or deleting

    function typeLoop() {
        if (!typingEl) return; // safety check
        if (forward) {
            typingEl.textContent += text.charAt(index);
            index++;
            if (index === text.length) {
                forward = false;
                setTimeout(typeLoop, 1500); // pause at end
                return;
            }
        } else {
            typingEl.textContent = typingEl.textContent.slice(0, -1);
            index--;
            if (index === 0) {
                forward = true;
                setTimeout(typeLoop, 500); // pause at start
                return;
            }
        }
        setTimeout(typeLoop, 100);
    }

    typeLoop();
});
</script>

